<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Toastr style -->
    <link href="~/Content/css/toastr.min.css" rel="stylesheet">

    <!-- Gritter -->
    <link href="~/Content/css/jquery.gritter.css" rel="stylesheet">

    <link href="~/Content/css/animate.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">

</head>
<body>


@if (Request.IsAuthenticated)
{
    <div id="wrapper">

        @Html.Partial("_MenuLateral")
        @Html.Partial("_MenuArriba")


        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>
    </div>
    @Html.Partial("_MenuLateral")
    @Html.Partial("_MenuArriba")

}else
    {
    <div class="container body-content">
        @RenderBody()


    </div>
    }


    

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Mainly scripts -->
    <script src="~/Content/js/jquery-2.1.1.js"></script>

    <script src="~/Content/js/bootstrap.min.js"></script>

    <script src="~/Content/js/jquery.metisMenu.js"></script>




    <!-- Custom and plugin javascript -->
    <script src="~/Content/js/inspinia.js"></script>


    @RenderSection("Scripts", false)
     
</body>
</html>